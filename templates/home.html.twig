{% extends 'base.html.twig' %}
{% block title %}
    Bienvenue!
{% endblock %}
{% block body %}
<div class="container">
    <div class="jumbotron">
        <h1 class="display-3">Bienvenue sur Symbnb!</h1>
        <p class="lead">Nous mettons en relations les voyageurs et les proprietaires qui veulent profiter.</p>
        <hr class="my-4">
        <p>Vous etes voyageurs ?</p>
        <p class="lead">
            <a class="btn btn-primary btn-lg" href="{{path('ads_index')}}" role="button">Voir nos annonces</a>
        </p>
    </div>
    <h2 class="h1 my-5">Nos appartements stars !</h2>
    <div class="row border-secondary mt-5">
        {% for data in ads %}
            {% include "ad/_ad.html.twig" with {'ad':data.annonce} %}
        {% endfor %}
    </div>
    <h2 class="h1 my-5">Nos propri√©taires stars !</h2>
    <div class="row">
        {% for data in users %}
            {% set u = data.user %}
            <div class="col">
                <div class="card border-secondary mb-3">
                    <div class="card-body">
                        <h4 class="card-title">
                            {{u.fullName}}
                        </h4>
                        <hr>
                        <div class="card-text">
                            <img src="{{u.picture}}" alt="{{u.fullName}}" class="float-left mr-3 rounded">
                            <p>{{u.introduction}}</p>
                            <a href="{{path('user_show',{'slug':u.slug})}}" class="btn btn-success float-right">En savoir plus!</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        
    </div>
</div>
{% endblock %}