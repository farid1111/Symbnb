{% set url = path('ads_show',{'slug':ad.slug}) %}
    <div class="col-md-4 ">
        <div class="card bg-light mb-3">
            <div class="card-header text-center">
                {{ad.rooms}} chambres, <strong>{{ad.price}}&euro; / nuits</strong> <br>
                <small>Pas encore not√©</small>
            </div>
            <a href="{{url}} ">
                <img src="{{ad.coverImage}} " alt="image appart" style="height:200px; width: 100%; display: block">
            </a>
            <div class="card-body">
            <a href="{{url}}">
                <h4 class="card-title">
                    {{ad.title}}
                </h4>
            </a>
                <p class="card-text">
                    {{ad.introduction}}
                </p>
                {% if app.user and app.user == ad.author %}
                    <a href="{{path('ads_edit', {'slug': ad.slug})}}" class="btn btn-primary">Modifier l'annonce</a>
                {% else %}
                    <a href="{{url}}" class="btn btn-primary"> En savoir plus</a>
                {% endif %}
            </div>
        </div>
    </div>